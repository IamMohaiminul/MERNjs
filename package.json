{
  "name": "mernjs",
  "version": "2.0.1",
  "description": "an open-source full-stack JavaScript solution",
  "keywords": [
    "Node.js",
    "Express",
    "React",
    "MongoDB",
    "Redux",
    "Webpack",
    "babel"
  ],
  "author": "Muhd Mohaiminul Islam <IamMohaiminul>",
  "private": false,
  "scripts": {
    "prebuild": "rimraf ./dist ./public/dist",
    "build": "concurrently \"npm:build:client\" \"npm:build:server\"",
    "build:client": "webpack",
    "build:server": "babel -d ./dist ./server -s",
    "start": "node ./dist",
    "start:debug": "node --inspect ./dist",
    "start:dev": "concurrently \"npm:start:dev:client\" \"npm:start:dev:server\"",
    "start:dev:client": "webpack --watch",
    "start:dev:server": "DEBUG=MERNjs:* nodemon --exec babel-node ./server",
    "format": "prettier \"{server,client,admin,public/{styles,scripts}}/**/*.{js,jsx,css}\" --write",
    "lint": "eslint \"{server,client,admin}/**/*.{js,jsx}\" --fix"
  },
  "dependencies": {
    "@babel/polyfill": "^7.10.1",
    "app-module-path": "^2.2.0",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "moment": "^2.26.0",
    "mongoose": "^5.9.18",
    "morgan": "^1.10.0",
    "pug": "^3.0.0",
    "serve-favicon": "^2.5.0",
    "toastr": "^2.1.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "autoprefixer": "^9.8.0",
    "babel-loader": "^8.1.0",
    "bootstrap": "^4.5.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^4.0.0",
    "concurrently": "^5.2.0",
    "css-loader": "^3.5.3",
    "dotenv-webpack": "^1.8.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "file-loader": "^6.0.0",
    "font-awesome": "^4.7.0",
    "history": "^4.10.1",
    "jquery": "^3.5.1",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "path": "^0.12.7",
    "popper.js": "^1.16.1",
    "postcss-loader": "^3.0.0",
    "precss": "^4.0.0",
    "prettier": "^2.1.2",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router": "^5.2.0",
